input#apiVersion(type='hidden', value='#{API_VERSION}')

//header
.navbar.navbar-fixed-top
  .navbar-inner
    .container-fluid
      a.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
        span.icon-bar
        span.icon-bar
      a.brand(href='/') #{title}
      .nav-collapse
        ul.nav
          li
            a.mouse#btn-changelog #{__i('Changelog')}
          li
            a(href='mailto:lizhepro@gmail.com') #{__i('Feedback')}
          li
