$font = 'Palatino Linotype', 'Book Antiqua', Palatino, FreeSerif, serif

.main
  margin: 0 auto
  width: 960px

body
  padding: 40px
  font-family: $font
.title
  text-align: center
  font-family: $font
.show-grid
  margin: 20px
.search
  text-align: center
#searchinput
  height: 26px
.content
  width: 570px
  margin: 0 auto
#api-desc
  font-family: $font
  font-size: 16px
  line-height: 24px
#api-signatures h3
  margin: 20px 0 5px 0
#api-signatures ul
  margin-bottom: 15px
#api-signatures li, #api-signatures p
  font-family: $font
  font-size: 16px
  line-height: 22px
#api-signatures p
  margin-bottom: 30px
p
  text-rendering: optimizeLegibility;
.dropdown-type
  margin-right: 8px
  height: 26px
  line-height: 26px
h3
  font-family: $font
.dropdown-menu li a
  height: 26px
  line-height: 26px
#class-navigation
  position: absolute
  left: 0
  top: 20px
#class-navigation ul
  height: auto
  width: 60px
.active
  font-weight: bold
